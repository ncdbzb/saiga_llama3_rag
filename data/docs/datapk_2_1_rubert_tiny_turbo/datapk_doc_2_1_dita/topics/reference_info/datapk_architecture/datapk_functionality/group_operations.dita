     <colspec colnum="1" colname="col1" colwidth="35%"/>
     <colspec colnum="2" colname="col2" colwidth="65%"/>
     <thead>
      <row>
       <entry>Название</entry>
       <entry>Страницы интерфейса</entry>
      </row>
     </thead>
     <tbody>
      <row>
       <entry>Удаление</entry>
       <entry><cite keyref="prot_obj_fp"/>, <cite keyref="dataflow_fp"/>, <cite
         keyref="incidents_fp"/>, <cite keyref="event_index_fp"/>, <cite
         keyref="definitions_list_fp"/>, <cite keyref="definitions_group_fp"/>, <cite
         keyref="check_report_fp"/>, <cite keyref="scripts_fp"/>, <cite keyref="scaners_fp"/>, <cite
         keyref="event_source_fp"/>, <cite keyref="cred_prot_obj_fp"/>, <cite
