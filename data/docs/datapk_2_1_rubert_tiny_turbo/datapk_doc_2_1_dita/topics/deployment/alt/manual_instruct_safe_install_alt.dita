<task id="manual_instruct_safe_install_alt">
    <title>Установка ОС Альт Сервер 10.1—10.2</title>
    <taskbody>
        <context conref="../../reusable/alt/alt_for_installation_context.dita#ReusableComponent_anx_fpw_dzb/context_bnx_fpw_dzb"/>
        <steps>
            <step>
                <cmd>Подключите ISO-образ <term keyref="alt_name"/>
                    <codeph>alt-server-10.[минор-версия]-x86_64.iso</codeph>.</cmd>
                <stepresult
                    conref="../../reusable/alt/alt_result_open_download_window.dita#ReusableComponent_zx3_zpw_dzb/stepresult_ay3_zpw_dzb"
                />
            </step>
            <step>
                <cmd
                    conref="../../reusable/alt/alt_choose_resque_livecd_step.dita#ReusableComponent_wbt_vqw_dzb/cmd_ybt_vqw_dzb"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_resque_live_cd_window.dita#ReusableComponent_afr_jsl_21c/fig_lqv_xwf_mvb"
                        id="fig_fcs_jsl_21c"/>
                </info>
                <stepresult
                    conref="../../reusable/alt/alt_resque_live_cd_result.dita#ReusableComponent_lhj_tsl_21c/stepresult_mhj_tsl_21c"
                />
            </step>
            <step>
                <cmd>Для подготовки к разметке дискового пространства:</cmd>
                <substeps>
                    <substep
                        conref="../../reusable/alt/alt_check_disk_name_substep.dita#ReusableComponent_pym_lqd_q1c/substep_rym_lqd_q1c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_create_disk_name_substep.dita#ReusableComponent_vt3_rqd_q1c/substep_wt3_rqd_q1c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_create_disk_parts_substep.dita#ReusableComponent_szg_lrd_q1c/substep_tzg_lrd_q1c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_check_disk_parts_substep.dita#ReusableComponent_fpn_nrd_q1c/substep_hpn_nrd_q1c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_create_var_v_substep.dita#ReusableComponent_cfl_prd_q1c/substep_gfl_prd_q1c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_manage_phys_disks__comm_substep.dita#ReusableComponent_tpl_srd_q1c/substep_vpl_srd_q1c">
                        <cmd/>
                    </substep>
                </substeps>
            </step>
            <step>
                <cmd
                    conref="../../reusable/alt/alt_install_step.dita#ReusableComponent_vc5_fyl_21c/cmd_ad5_fyl_21c"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_install_window.dita#ReusableComponent_s4n_myl_21c/fig_cdn_f3j_lyb"
                        id="fig_kj4_myl_21c"/>
                </info>
                <stepresult
                    conref="../../reusable/alt/alt_language_window_result.dita#ReusableComponent_rj1_1lx_dzb/stepresult_sj1_1lx_dzb"
                />
            </step>
            <step>
                <cmd
                    conref="../../reusable/alt/alt_videodriver_step.dita#ReusableComponent_fkw_wyl_21c/cmd_hkw_wyl_21c"/>
                <substeps id="substeps_mhx_b1s_nyb">
                    <substep
                        conref="../../reusable/alt/alt_videodriver_substepstep_e.dita#ReusableComponent_gwp_c1m_21c/substep_lwp_c1m_21c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_videodriver_substepstep_nomodest.dita#ReusableComponent_vpj_j1m_21c/substep_bqj_j1m_21c">
                        <cmd/>
                    </substep>
                    <substep
                        conref="../../reusable/alt/alt_f10_ctrl_x_substep.dita#ReusableComponent_zhz_klx_dzb/substep_a3z_klx_dzb">
                        <cmd/>
                    </substep>
                </substeps>
                <stepresult
                    conref="../../reusable/alt/alt_start_download_new_param_result.dita#ReusableComponent_s2q_ylx_dzb/stepresult_t2q_ylx_dzb"
                />
            </step>
           
            <step>
                <cmd conref="../../reusable/alt/alt_set_language_cmd.dita#ReusableComponent_v4s_3mx_dzb/cmd_x4s_3mx_dzb"/>
                <substeps conref="../../reusable/alt/alt_set_language_substeps.dita#ReusableComponent_zkx_pmx_dzb/substeps_rc3_sfp_dzb">
                    <substep>
                        <cmd/>
                    </substep>
                   
                </substeps>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_language_window.dita#ReusableComponent_hp4_1bm_21c/fig_qrh_gyf_mvb"
                        id="fig_kmp_1bm_21c"/>
                </info>
                <stepresult
                    conref="../../reusable/alt/alt_language_result.dita#ReusableComponent_qwm_vfm_21c/stepresult_wjw_5mx_dzb"/>
            </step>
            <step>
                <cmd conref="../../reusable/alt/alt_license_cmd.dita#ReusableComponent_i12_1nx_dzb/cmd_j12_1nx_dzb"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_license_window.dita#ReusableComponent_mzn_dgm_21c/fig_nqv_xwf_mvb"
                        id="fig_qs4_dgm_21c"/>
                </info>
                <stepresult conref="../../reusable/alt/alt_license_result.dita#ReusableComponent_bsh_3nx_dzb/stepresult_csh_3nx_dzb"/>
            </step>
            <step>
                <cmd
                    conref="../../reusable/alt/alt_date_time_cmd.dita#ReusableComponent_hht_pnx_dzb/cmd_nht_pnx_dzb"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_time_window.dita#ReusableComponent_ppk_pgm_21c/fig_kqm_x2g_mvb"
                        id="fig_xml_pgm_21c"/>
                </info>
                <stepresult
                    conref="../../reusable/alt/alt_date_time_result.dita#ReusableComponent_y44_xnx_dzb/stepresult_ap4_xnx_dzb"
                />
            </step>
            <step>
                <cmd conref="../../reusable/alt/alt_disk_part_cmd.dita#ReusableComponent_ddd_44x_dzb/cmd_edd_44x_dzb"/>
                <substeps id="substeps_ets_jjb_nvb">
                    <substep id="substep_m1k_lpx_dzb">
                        <cmd
                            conref="../../reusable/alt/alt_disk_part_choose_profile.dita#ReusableComponent_klv_gqt_fzb/cmd_mlv_gqt_fzb"/>
                        <stepresult
                            conref="../../reusable/alt/alt_disk_partition_result.dita#ReusableComponent_fww_jhm_21c/stepresult_kww_jhm_21c"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_sda1.dita#ReusableComponent_gzs_mqx_dzb/cmd_hzs_mqx_dzb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_fat32.dita#ReusableComponent_oqh_zqx_dzb/cmd_pqh_zqx_dzb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_tome.dita#ReusableComponent_v45_vjc_2zb/cmd_w45_vjc_2zb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_boot_efi_cmd.dita#ReusableComponent_axj_gkc_2zb/cmd_bxj_gkc_2zb"/>
                        <stepresult>появится окно с разделами диска.<fig
                                conref="../../reusable/alt/alt_prepare_disk_sda1_window.dita#ReusableComponent_cfd_mjm_21c/fig_ddj_bmj_lyb"
                                id="fig_bzd_mjm_21c"/></stepresult>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_lvm.dita#ReusableComponent_ld4_pkc_2zb/cmd_md4_pkc_2zb"/>
                    </substep>
                    <substep>
                        <cmd>В новом окне выберите <uicontrol>Файловая система XFS</uicontrol> и
                            нажмите <uicontrol>ОК</uicontrol>.</cmd>
                        <info>
                            <note
                                conref="../../reusable/notes/xfs_500_attent.dita#ReusableComponent_ny5_2rc_3bc/note_xfs_500"
                                id="note_b4r_src_3bc"/>
                        </info>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_tome_empty.dita#ReusableComponent_pdy_4lc_2zb/cmd_qdy_4lc_2zb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_mount.dita#ReusableComponent_sxn_ylc_2zb/cmd_txn_ylc_2zb"/>
                        <stepresult>появится окно подготовки диска со списком томов в созданной
                                группе.<fig id="fig_lxc_z4b_nvb">
                                <title>Окно «Подготовка диска» (форматирование раздела
                                    rootfs)</title>
                                <image href="../../../images/deployment/alt/alt_set_boot.png"
                                    id="image_mxc_z4b_nvb"/>
                            </fig></stepresult>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_disk_part_next.dita#ReusableComponent_r2z_dmc_2zb/cmd_s2z_dmc_2zb"/>
                    </substep>
                    <substep>
                        <cmd
                            conref="../../reusable/alt/alt_press_ok_window.dita#ReusableComponent_i55_ykm_21c/cmd_k55_ykm_21c"/>
                        <stepresult
                            conref="../../reusable/alt/alt_system_install_window_res.dita#ReusableComponent_o3r_flm_21c/stepresult_q3r_flm_21c"
                        />
                    </substep>
                    <substep>
                        <cmd
                            conref="../../reusable/alt/alt_min_install.dita#ReusableComponent_cbp_tbs_21c/cmd_ebp_tbs_21c"
                        />
                    </substep>
                </substeps>
                <stepresult
                    conref="../../reusable/alt/alt_start_install.dita#ReusableComponent_jbp_bcs_21c/stepresult_kbp_bcs_21c"/>
            </step>
            
                
            
            <step conref="../../reusable/alt/alt_install_wait.dita#ReusableComponent_lbk_2nc_2zb/step_nbk_2nc_2zb">
                <cmd/>
                
            </step>
            <step>
                <cmd
                    conref="../../reusable/alt/alt_check_efi.dita#ReusableComponent_etq_lcs_21c/cmd_ftq_lcs_21c"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_efi_window.dita#ReusableComponent_e5v_rcs_21c/fig_rcz_gtc_nvb"
                        id="fig_kgw_rcs_21c"/>
                </info>
                <stepresult
                    conref="../../reusable/alt/alt_efi_result.dita#ReusableComponent_i1n_zcs_21c/stepresult_j1n_zcs_21c"
                />
            </step>
            <step id="iface_set_step">
                <cmd
                    conref="../../reusable/alt/alt_net_config_cmd.dita#ReusableComponent_ksf_ync_2zb/cmd_lsf_ync_2zb"/>
                <substeps id="substeps_rsn_q4c_2zb">
                    <substep>
                        <cmd conref="../../reusable/alt/alt_net_config_computer_name.dita#ReusableComponent_f4m_24c_2zb/cmd_g4m_24c_2zb"/>
                    </substep>
                    <substep  conref="../../reusable/alt/alt_net_config_interfaces.dita#ReusableComponent_swk_k4c_2zb/substep_twk_k4c_2zb">
                        <cmd />
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_net_config_configuration.dita#ReusableComponent_zdw_x4c_2zb/cmd_b2w_x4c_2zb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_net_config_ip.dita#ReusableComponent_apq_kpc_2zb/cmd_bpq_kpc_2zb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_net_config_gateway.dita#ReusableComponent_pm4_xpc_2zb/cmd_tm4_xpc_2zb"/>
                    </substep>
                    <substep conref="../../reusable/alt/alt_net_config_dns.dita#ReusableComponent_pd2_dqc_2zb/substep_qd2_dqc_2zb">
                        <cmd/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_net_config_next.dita#ReusableComponent_ezp_kqc_2zb/cmd_hzp_kqc_2zb"/>
                    </substep>
                </substeps>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_net_config_filled_window.dita#ReusableComponent_pzf_f2s_21c/fig_s4m_r5c_nvb"
                        id="fig_umg_f2s_21c"/>
                </info>
                <stepresult conref="../../reusable/alt/alt_system_admin_window.dita#ReusableComponent_zmp_sqc_2zb/stepresult_bnp_sqc_2zb"/>
            </step>
            <step>
                <cmd conref="../../reusable/alt/alt_system_admin_cmd.dita#ReusableComponent_k5b_1rc_2zb/cmd_l5b_1rc_2zb"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_system_admin_pic.dita#ReusableComponent_n4h_r2s_21c/fig_glk_fb3_nvb"
                        id="fig_x13_r2s_21c"/>
                </info>
                <stepresult conref="../../reusable/alt/alt_system_user_window.dita#ReusableComponent_gb2_grc_2zb/stepresult_ib2_grc_2zb"/>
            </step>
            <step>
                <cmd conref="../../reusable/alt/alt_system_user_cmd.dita#ReusableComponent_rk5_mrc_2zb/cmd_sk5_mrc_2zb"/>
                <substeps id="substeps_ahk_csc_2zb">
                    <substep>
                        <cmd conref="../../reusable/alt/alt_system_user_login.dita#ReusableComponent_nfw_rrc_2zb/cmd_ofw_rrc_2zb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_system_user_password.dita#ReusableComponent_efx_src_2zb/cmd_ffx_src_2zb"/>
                    </substep>
                    <substep>
                        <cmd conref="../../reusable/alt/alt_system_user_next.dita#ReusableComponent_j5r_trc_2zb/cmd_k5r_trc_2zb"/>
                    </substep>
                </substeps>
              
                <info>
                    <fig id="fig_vvs_pb3_nvb">
                        <title>Окно «Системный пользователь»</title>
                        <image href="../../../images/deployment/alt/alt_user_password.png"
                            id="image_wvs_pb3_nvb"/>
                    </fig>
                </info>
                <stepresult conref="../../reusable/alt/alt_system_user_finish.dita#ReusableComponent_p5t_3sc_2zb/stepresult_q5t_3sc_2zb"/>
            </step>
            <step>
                <cmd conref="../../reusable/alt/alt_finish_cmd.dita#ReusableComponent_ktg_msc_2zb/cmd_mtg_msc_2zb"/>
                <info>
                    <fig
                        conref="../../reusable/alt/alt_finish_window.dita#ReusableComponent_qzn_jgs_21c/fig_hgn_vn3_nvb"
                        id="fig_dk4_jgs_21c"/>
                </info>
                <stepresult
                    conref="../../reusable/alt/alt_finish_result.dita#ReusableComponent_gbw_qgs_21c/stepresult_ibw_qgs_21c"/>
            </step>
        </steps>
    </taskbody>
</task>
